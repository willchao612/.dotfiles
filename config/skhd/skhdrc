# restart yabai
shift + alt - r : yabai --restart-service

# window navigation
alt - a : yabai -m space --focus recent
alt - h : yabai -m window --focus west
alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north
alt - l : yabai -m window --focus east
alt - p : yabai -m window --focus stack.prev || yabai -m window --focus stack.last
alt - n : yabai -m window --focus stack.next || yabai -m window --focus stack.first

# move windows
shift + alt - h : yabai -m window --warp west
shift + alt - j : yabai -m window --warp south
shift + alt - k : yabai -m window --warp north
shift + alt - l : yabai -m window --warp east

# rotate and flip
alt - r : yabai -m space --rotate 270
alt - y : yabai -m space --mirror y-axis
alt - x : yabai -m space --mirror x-axis

# toggle float
alt - t : yabai -m window --toggle float --grid 4:4:1:1:2:2

# maximize
shift + alt - m : yabai -m window --toggle zoom-fullscreen
alt - m : yabai -m window --toggle native-fullscreen

# balance
alt - e : yabai -m space balance

# move window to space
shift + alt - 1 : yabai -m window --space file && yabai -m space --focus file
shift + alt - 2 : yabai -m window --space term && yabai -m space --focus term
shift + alt - 3 : yabai -m window --space web1 && yabai -m space --focus web1
shift + alt - 0 : yabai -m window --space misc && yabai -m space --focus misc

# focus display
alt - 9 : yabai -m display --focus 1
alt - 0 : yabai -m display --focus 2

