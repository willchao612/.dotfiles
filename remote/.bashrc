# Environment variables --------------------------------------------------------

export EDITOR=vim

# Aliases ----------------------------------------------------------------------

alias ls="ls --color=auto"
alias ls="ls -p"
alias ll="ls -l"
alias la="ls -A"

alias ~="cd ~"
alias -="cd -"
alias ..="cd .."
alias ...="cd ../.."

alias grep="grep --color=auto"
alias cp="cp -v"
alias mv="mv -v"
